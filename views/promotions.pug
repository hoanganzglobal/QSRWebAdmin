extends layouts/main-layout.pug

block content 
  .app-main__inner
    .app-page-title
      .page-title-wrapper
        .page-title-heading
          .page-title-icon
            i.pe-7s-cash.icon-gradient.bg-mean-fruit
          div
            | Memos Dashboard
            .page-title-subheading
              | Promotion Combo, Promotion Discounts.
        .page-title-actions
          button.btn-shadow.mr-3.btn.btn-dark(type='button', data-toggle='tooltip', title='Analytics Dashboard', data-placement='bottom')
            i.fa.fa-star
          .d-inline-block.dropdown
            button.btn-shadow.dropdown-toggle.btn.btn-info(type='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
              span.btn-icon-wrapper.pr-2.opacity-7
                i.fa.fa-business-time.fa-w-20
              | Actions
            .dropdown-menu.dropdown-menu-right(tabindex='-1', role='menu', aria-hidden='true', x-placement='bottom-end', style='position: absolute; transform: translate3d(-130px, 33px, 0px); top: 0px; left: 0px; will-change: transform;')
              ul.nav.flex-column
                li.nav-item
                  a.nav-link(href='/promotions/add')
                    i.nav-link-icon.lnr-inbox
                    span
                      | Add New Memo

    .tab-content
      #tab-content-0.tab-pane.tabs-animation.fade.show.active(role='tabpanel')
        .row
          .col-md-12
            .main-card.mb-3.card
              .card-header
                i.header-icon.lnr-license.icon-gradient.bg-plum-plate
                | Promotions
                .btn-actions-pane-right
                  .nav
                    a.btn-pill.btn-wide.active.btn.btn-outline-alternate.btn-sm(data-toggle='tab', href='#tab-eg2-0') All
                    a.btn-pill.btn-wide.mr-1.ml-1.btn.btn-outline-alternate.btn-sm(data-toggle='tab', href='#tab-eg2-1') TPC
                    a.btn-pill.btn-wide.btn.btn-outline-alternate.btn-sm(data-toggle='tab', href='#tab-eg2-2') DQ
                    a.btn-pill.btn-wide.mr-1.ml-1.btn.btn-outline-alternate.btn-sm(data-toggle='tab', href='#tab-eg2-3') SWENSEN 
                    a.btn-pill.btn-wide.btn.btn-outline-alternate.btn-sm(data-toggle='tab', href='#tab-eg2-4') CHANG 
                    a.btn-pill.btn-wide.mr-1.ml-1.btn.btn-outline-alternate.btn-sm(data-toggle='tab', href='#tab-eg2-5') AKA        
              .card-body
                .tab-content
                  #tab-eg2-0.tab-pane.active(role='tabpanel')
                    .table-responsive
                      table#eg2-0.mb-0.table.table-striped.table-hover.table-bordered
                        thead
                          tr
                            th
                              | 
                            th
                              | Memo No.
                            th
                              | Memo Name
                            th
                              | Date Issued
                            th
                              | From Date
                            th
                              | To Date
                            th
                              | Memo File
                          tr
                            th
                            th
                              input#MemoNumberInput.form-control(name='MemoNumberInput', placeholder='Type to search', type='text')
                            th
                              input#MemoNameInput.form-control(name='MemoNameInput', placeholder='Type to search', type='text')
                            th
                              input#MemoDateIssueInput.form-control(name='MemoDateIssueInput', placeholder='Choose date', type='text')
                            th
                            th
                            th
                        - var data = data;
                        each t in data
                          tr
                            td
                            td= t.memoNumber
                            td= t.memoName
                            td= t.memoDateIssue
                            td= t.memoFromDate
                            td= t.memoToDate
                            td= t.memoFile
                  #tab-eg2-1.tab-pane(role='tabpanel')
                  #tab-eg2-2.tab-pane(role='tabpanel')
                  #tab-eg2-3.tab-pane(role='tabpanel')
                  #tab-eg2-4.tab-pane(role='tabpanel')

    .row
      .col-md-6.col-xl-4
        .card.mb-3.widget-content.bg-midnight-bloom
          .widget-content-wrapper.text-white
            .widget-content-left
              .widget-heading Total Orders
              .widget-subheading Today
            .widget-content-right
              .widget-numbers.text-white
                span 1896
      .col-md-6.col-xl-4
        .card.mb-3.widget-content.bg-arielle-smile
          .widget-content-wrapper.text-white
            .widget-content-left
              .widget-heading Total Sales
              .widget-subheading Today
            .widget-content-right
              .widget-numbers.text-white
                span $ 40,000
      .col-md-6.col-xl-4
        .card.mb-3.widget-content.bg-grow-early
          .widget-content-wrapper.text-white
            .widget-content-left
              .widget-heading Web Channel
              .widget-subheading Today
            .widget-content-right
              .widget-numbers.text-white
                span $ 35,000

block script
  script(type='text/javascript', src="/js/libs/datatables/jquery.dataTables.min.js")
  script(type='text/javascript', src="/js/libs/datatables/dataTables.select.min.js")
  script(type='text/javascript', src="/js/promotionTable.js")

block styles
  link(rel="stylesheet" type="text/css" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css")
  link(rel="stylesheet" type="text/css" href="/css/jquery.dataTables.min.css")