extends layouts/main-layout.pug

block content 
  .app-main__inner
    .app-page-title
      .page-title-wrapper
        .page-title-heading
          .page-title-icon
            i.pe-7s-cash.icon-gradient.bg-mean-fruit
          div
            | Sales Dashboard
            .page-title-subheading
              | Total Sales Channels, Total Order Channels, Revenue.
        .page-title-actions
          button.btn-shadow.mr-3.btn.btn-dark(type='button', data-toggle='tooltip', title='Analytics Dashboard', data-placement='bottom')
            i.fa.fa-star
    .row
      .col-md-6.col-xl-4
        .card.mb-3.widget-content.bg-midnight-bloom
          .widget-content-wrapper.text-white
            .widget-content-left
              .widget-heading Total Orders
              .widget-subheading Today
            .widget-content-right
              .widget-numbers.text-white
                span 1896
      .col-md-6.col-xl-4
        .card.mb-3.widget-content.bg-arielle-smile
          .widget-content-wrapper.text-white
            .widget-content-left
              .widget-heading Total Sales
              .widget-subheading Today
            .widget-content-right
              .widget-numbers.text-white
                span $ 40,000
      .col-md-6.col-xl-4
        .card.mb-3.widget-content.bg-grow-early
          .widget-content-wrapper.text-white
            .widget-content-left
              .widget-heading Web Channel
              .widget-subheading Today
            .widget-content-right
              .widget-numbers.text-white
                span $ 35,000
    .row
      .col-md-12
        .main-card.mb-3.card
          .card-header
            | Active Shops
            .btn-actions-pane-right
              .btn-group-sm.btn-group(role='group')
                button.active.btn.btn-focus Today
          .table-responsive
            table.align-middle.mb-0.table.table-borderless.table-striped.table-hover
              thead
                tr
                  th.text-center #
                  th Shop Name
                  th Total Orders
                  th Total Sales
              tbody
                tr
                  td.text-center.text-muted #1
                  td TPC Van Hanh Mall
                  td 50
                  td $ 1,000
                tr
                  td.text-center.text-muted #1
                  td TPC Bau Cat
                  td 52
                  td $ 1,100
                tr
                  td.text-center.text-muted #1
                  td TPC Pham Hung
                  td 53
                  td $ 1,200
                tr
                  td.text-center.text-muted #1
                  td TPC Nguyen Thai Hoc
                  td 54
                  td $ 1,300
    .row
      .col-md-6.col-lg-3
        .card-shadow-danger.mb-3.widget-chart.widget-chart2.text-left.card
          .widget-content
            .widget-content-outer
              .widget-content-wrapper
                .widget-content-left.pr-2.fsize-1
                  .widget-numbers.mt-0.fsize-3.text-danger 71%
                .widget-content-right.w-100
                  .progress-bar-xs.progress
                    .progress-bar.bg-danger(role='progressbar', aria-valuenow='71', aria-valuemin='0', aria-valuemax='100', style='width: 71%;')
              .widget-content-left.fsize-1
                .text-muted.opacity-6 Income Targ
      .col-md-6.col-lg-3
        .card-shadow-success.mb-3.widget-chart.widget-chart2.text-left.card
          .widget-content
            .widget-content-outer
              .widget-content-wrapper
                .widget-content-left.pr-2.fsize-1
                  .widget-numbers.mt-0.fsize-3.text-success 54%
                .widget-content-right.w-100
                  .progress-bar-xs.progress
                    .progress-bar.bg-success(role='progressbar', aria-valuenow='54', aria-valuemin='0', aria-valuemax='100', style='width: 54%;')
              .widget-content-left.fsize-1
                .text-muted.opacity-6 Expenses Target
      .col-md-6.col-lg-3
        .card-shadow-success.mb-3.widget-chart.widget-chart2.text-left.card
          .widget-content
            .widget-content-outer
              .widget-content-wrapper
                .widget-content-left.pr-2.fsize-1
                  .widget-numbers.mt-0.fsize-3.text-warning 32%
                .widget-content-right.w-100
                  .progress-bar-xs.progress
                    .progress-bar.bg-warning(role='progressbar', aria-valuenow='32', aria-valuemin='0', aria-valuemax='100', style='width: 32%;')
              .widget-content-left.fsize-1
                .text-muted.opacity-6 Spendings Target
      .col-md-6.col-lg-3
        .card-shadow-info.mb-3.widget-chart.widget-chart2.text-left.card
          .widget-content
            .widget-content-outer
              .widget-content-wrapper
                .widget-content-left.pr-2.fsize-1
                  .widget-numbers.mt-0.fsize-3.text-info 89%
                .widget-content-right.w-100
                  .progress-bar-xs.progress
                    .progress-bar.bg-info(role='progressbar', aria-valuenow='89', aria-valuemin='0', aria-valuemax='100', style='width: 89%;')
              .widget-content-left.fsize-1
                .text-muted.opacity-6 Totals Target