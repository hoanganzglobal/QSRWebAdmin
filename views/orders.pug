extends layouts/main-layout.pug

block content 
  .app-main__inner
    .app-page-title
      .page-title-wrapper
        .page-title-heading
          .page-title-icon
            i.pe-7s-cash.icon-gradient.bg-mean-fruit
          div
            | Orders Dashboard
            .page-title-subheading
              | Total Order Channels, Revenue.
        .page-title-actions
          button.btn-shadow.mr-3.btn.btn-dark(type='button', data-toggle='tooltip', title='Analytics Dashboard', data-placement='bottom')
            i.fa.fa-star
          .d-inline-block.dropdown
            button.btn-shadow.dropdown-toggle.btn.btn-info(type='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
              span.btn-icon-wrapper.pr-2.opacity-7
                i.fa.fa-business-time.fa-w-20
              | Actions
            .dropdown-menu.dropdown-menu-right(tabindex='-1', role='menu', aria-hidden='true', x-placement='bottom-end', style='position: absolute; transform: translate3d(-130px, 33px, 0px); top: 0px; left: 0px; will-change: transform;')
              ul.nav.flex-column
                li.nav-item
                  a.nav-link(href='/orders')
                    i.nav-link-icon.lnr-inbox
                    span
                      | Transaction Today

    .tab-content
      #tab-content-0.tab-pane.tabs-animation.fade.show.active(role='tabpanel')
        .row
          .col-md-12
            .main-card.mb-3.card
              .card-header
                i.header-icon.lnr-license.icon-gradient.bg-plum-plate
                | Transaction Today
                .btn-actions-pane-right
                  .nav
                    a.btn-pill.btn-wide.active.btn.btn-outline-alternate.btn-sm(data-toggle='tab', href='#tab-eg2-0') All
                    a.btn-pill.btn-wide.mr-1.ml-1.btn.btn-outline-alternate.btn-sm(data-toggle='tab', href='#tab-eg2-1') TPC
                    a.btn-pill.btn-wide.btn.btn-outline-alternate.btn-sm(data-toggle='tab', href='#tab-eg2-2') DQ
                    a.btn-pill.btn-wide.mr-1.ml-1.btn.btn-outline-alternate.btn-sm(data-toggle='tab', href='#tab-eg2-3') SWENSEN 
                    a.btn-pill.btn-wide.btn.btn-outline-alternate.btn-sm(data-toggle='tab', href='#tab-eg2-4') CHANG 
                    a.btn-pill.btn-wide.mr-1.ml-1.btn.btn-outline-alternate.btn-sm(data-toggle='tab', href='#tab-eg2-5') AKA        
              .card-body
                .tab-content
                  #tab-eg2-0.tab-pane.active(role='tabpanel')
                    .table-responsive
                      table#eg2-0.mb-0.table.table-striped.table-hover.table-bordered
                        thead
                          tr
                            th
                              | ID
                            th
                              | Brand
                            th
                              | Shop Name
                            th
                              | Order Channel
                            th
                              | Payment Method
                            th
                              | Order Status
                            th
                              | Payment Status
                            th
                              | Order Method
                            th
                              | Customer Info
                            th
                              | Sync Status
                            th
                              | Created At
                            th
                              | Delivery Time
                            th
                              | Total Amount
                          tr
                            th
                              input#IDInput.form-control(name='IDInput', placeholder='type to search', type='text')
                            th
                              select#BrandSelect.form-control(name='BrandSelect')
                                option(value='') All
                                option(value='tpc') TPC
                                option(value='dq') DQ
                                option(value='swensen') SWENSEN
                                option(value='aka') AKA
                                option(value='chang') CHANG
                            th
                            th
                              select#CategorySelect.form-control(name='CategorySelect')
                                option(value='') All
                                option(value='online') Online
                                option(value='call center') Call Center
                            th
                              select#PaymentMethodSelect.form-control(name='PaymentMethodSelect')
                                option(value='') All
                                option(value='cod') COD
                                option(value='momo') Momo
                                option(value='sacombank') Sacombank
                            th
                              select#OrderStatusSelect.form-control(name='OrderStatusSelect')
                                option(value='') All
                                option(value='Pending') Pending
                                option(value='First Order') First Order
                                option(value='First Big Order') First Big Order
                                option(value='Confirmed') Confirmed
                                option(value='Cooking') Cooking
                                option(value='Cooked') Cooked
                                option(value='On The Way') On The Way
                                option(value='Delivered') Delivered
                                option(value='Completed') Completed
                                option(value='Void') Void
                            th
                              select#PaymentStatusSelect.form-control(name='PaymentStatusSelect')
                                option(value='') All
                                option(value='Pending') Pending
                                option(value='Waiting') Waiting
                                option(value='Paid') Paid
                                option(value='Void') Void
                                option(value='Refund') Refund
                            th
                              select#OrderMethodSelect.form-control(name='OrderMethodSelect')
                                option(value='') All
                                option(value='de') Delivery
                                option(value='ta') Take-Away
                            th
                              input#CusInfoInput.form-control(name='CusInfoInput', placeholder='type to search', type='text')
                            th
                              select#SyncStatusSelect.form-control(name='SyncStatusSelect')
                                option(value='') All
                                option(value='Not Push') Not Push
                                option(value='Pushing') Pushing
                                option(value='Pushed') Pushed
                                option(value='Cancelled') Cancelled
                            th
                            th
                            th
                              input#TotalInput.form-control(name='TotalInput', placeholder='type to search', type='text')
                  #tab-eg2-1.tab-pane(role='tabpanel')
                  #tab-eg2-2.tab-pane(role='tabpanel')
                  #tab-eg2-3.tab-pane(role='tabpanel')
                  #tab-eg2-4.tab-pane(role='tabpanel')

    .row
      .col-md-6.col-xl-4
        .card.mb-3.widget-content.bg-midnight-bloom
          .widget-content-wrapper.text-white
            .widget-content-left
              .widget-heading Total Orders
              .widget-subheading Today
            .widget-content-right
              .widget-numbers.text-white
                span 1896
      .col-md-6.col-xl-4
        .card.mb-3.widget-content.bg-arielle-smile
          .widget-content-wrapper.text-white
            .widget-content-left
              .widget-heading Total Sales
              .widget-subheading Today
            .widget-content-right
              .widget-numbers.text-white
                span $ 40,000
      .col-md-6.col-xl-4
        .card.mb-3.widget-content.bg-grow-early
          .widget-content-wrapper.text-white
            .widget-content-left
              .widget-heading Web Channel
              .widget-subheading Today
            .widget-content-right
              .widget-numbers.text-white
                span $ 35,000

